<% include partials/header.ejs %> <% include partials/topicSideBar.ejs %>
<div class="col-lg-7 p-0">
  <div class="card add-question-card mb-2 border-radius-10 shadow-card">
    <div class="card-body p-3">
      <div class="card-subtitle text-muted">
        <img
          src="<%=currentUser.imageUrl%>"
          alt="avatar"
          class="add-ques-image"
        />
        <a id="userFullName" class="user-name-link fs-13" href="/profile/<%= currentUser._id%>"
          ><%= currentUser.firstname.toUpperCase()%> <%=
          currentUser.lastname.toUpperCase()%></a
        >
      </div>
      <a
        href="#addQuestionModal"
        class="add-question-link"
        data-toggle="modal"
        data-target="#addQuestionModal"
        ><h3 class="modal-title text-muted mt-1">
          <strong>What is your question?</strong>
        </h3></a
      >
    </div>
  </div>
  <%include partials/showQuestion.ejs%>
</div>
<div class="col-lg"></div>

