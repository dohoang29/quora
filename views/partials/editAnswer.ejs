<div
  class="modal fade"
  id="editAnswer<%= answer._id %>"
  tabindex="-1"
  role="dialog"
  aria-labelledby="editAnswerTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header custom-modal-background">
        <h5
          class="modal-title custom-modal-title modal-title-active"
          id="editAnswerTitle"
        >
          Edit Answer
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true" class="custom-modal-close">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form
          class="ansForm"
          method="POST"
          action="/answer/<%= answer._id%>?_method=PUT"
        >
          <div class="add-ans-card">
            <textarea
              name="content"
              class="ansEditor"
              placeholder="Write your answer"
            ><%-answer.content%></textarea>
          </div>
          <div class="card-footer text-muted">
            <button type="submit" class="btn btn-primary add-question-button">
              Edit
            </button>
            <button
          type="button"
          class="btn btn-primary add-question-button"
          data-dismiss="modal"
          aria-label="Close"
        >
          Close
        </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
