<div
  class="modal fade"
  id="editQuestion"
  tabindex="-1"
  role="dialog"
  aria-labelledby="editQuestionTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header custom-modal-background">
        <h5
          class="modal-title custom-modal-title modal-title-active"
          id="editQuestionTitle"
        >
          Edit Question
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true" class="custom-modal-close">&times;</span>
        </button>
      </div>
      <form action="/question/<%= question._id %>?_method=PUT" method="POST">
        <div class="modal-body">
          <div class="modal-section-question">
            <div class="form-group">
              <div class="card-subtitle text-muted">
                <span class="form-group">
                  <select class="topic-form w-20" id="chooseTopic" name="privacy">
                    <option value="public"> Public </option>
                    <option value="limited"> Limited </option>
                    <option value="private"> Private </option>
                  </select>
                </span>
              </div>
            </div>
            <div class="form-group">
              <input
                type="text"
                class="form-control custom-question-input"
                id="addQuestion"
                name="question"
                placeholder='Start your question with "What","How","Why",etc.'
                value="<%= question.title %>"
              />
            </div>
          </div>
          <div class="modal-section-link">
            <input
              type="url"
              class="form-control fa custom-link-input"
              id="addLink"
              name="link"
              placeholder="&#xf0c1; Optional: include a link that gives context"
            />
          </div>
        </div>
        <div class="modal-footer custom-modal-background">
          <button
            type="button"
            class="btn btn-secondary cancel-button"
            data-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-primary add-question-button">
            Edit Question
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
