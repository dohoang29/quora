<% include ../partials/headAdmin.ejs %>
    <link rel="stylesheet" href="/css/styleTopics.css" />
    <!-- /. NAV SIDE  -->
    <div class="row">
        <div class="col-md-12">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-4">
                        <% include ../partials/messages %>
                    </div>
                </div>
                <div class="box postManage">
                    <!-- Box Head -->
                    <div class="box-head search-admin">
                        <div class="right">
                            <label>search by</label>
                            <input type="text" class="field small-field">
                            <input type="submit" class="button b-search" value="search">
                        </div>
                    </div>
                    <!-- End Box Head -->

                    <!-- Table -->
                    <div class="table">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>

                                <th width="70%">Question</th>
                                <th>Date Add</th>
                                <th>Author</th>
                                <th>Control</th>

                            </tr>
                            <tbody>
                                <% questions.forEach((question)=>{ %>

                                    <tr>
                                        <td class="more">
                                            <%= question.title%>
                                        </td>
                                        <td>
                                            <%= moment(question.dateCreated).fromNow()%>
                                        </td>
                                        <td>
                                            <%= question.author.lastname%>
                                                <%= question.author.firstname%>
                                        </td>
                                        <td><a href="#" onclick="return confirm( 'Are you sure to delete this record ?');"><i class="fa fa-remove"></i></a> Or <a href="/admin/ban/questions/<%=question._id%>"><i class="fa fa-ban"></i></a></td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>


                        <!-- Pagging -->
                        <div class="pagging">
                            <div class="left">Showing 1-12 of 44</div>
                            <div class="right">
                                <a href="#">Previous</a>
                                <a href="#">1</a>
                                <a href="#">2</a>
                                <a href="#">3</a>
                                <a href="#">4</a>
                                <a href="#">245</a>
                                <span>...</span>
                                <a href="#">Next</a>
                                <a href="#">View all</a>
                            </div>
                        </div>
                        <!-- End Pagging -->

                    </div>
                    <!-- Table -->

                </div>
            </div>
        </div>
    </div>
    <script>
            $(document).ready(function() {
                // Configure/customize these variables.
                var showChar = 100;  // How many characters are shown by default
                var ellipsestext = "...";
                var moretext = "more >";
                var lesstext = "less";
                
            
                $('.more').each(function() {
                    var content = $(this).html();
             
                    if(content.length > showChar) {
             
                        var c = content.substr(0, showChar);
                        var h = content.substr(showChar, content.length - showChar);
             
                        var html = c + '<span class="moreellipses">' + ellipsestext+ '&nbsp;</span><span class="morecontent"><span>' + h + '</span>&nbsp;&nbsp;<a href="" class="morelink">' + moretext + '</a></span>';
             
                        $(this).html(html);
                    }
             
                });
               
                $(".morelink").click(function(){
                    if($(this).hasClass("less")) {
                        $(this).removeClass("less");
                        $(this).html(moretext);
                    } else {
                        $(this).addClass("less");
                        $(this).html(lesstext);
                    }
                    $(this).parent().prev().toggle();
                    $(this).prev().toggle();
                    return false;
                });
                
            });
            
            </script>
    </body>

    </html>