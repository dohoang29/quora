    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>Admin Dashboard</h2>
                    <% include ../partials/messages %>
                </div>
            </div>
            <hr>

            <div class="row">
                <div class="col-md-12">
                    <div class="create-user">
                        <a onclick="document.getElementById('createMember').style.display='block'" class="btn btn-sm btn-success add-user">Create User</a>
                    </div>
                    <div id="createMember" class="w3-modal">
                        <div class="w3-modal-content">
                            <header class="w3-container w3-teal">
                                <span onclick="document.getElementById('createMember').style.display='none'" class="w3-button w3-display-topright">&times;</span>
                                <h2>Create User</h2>
                            </header>
                            <div class="w3-container">
                                <form action="/admin/add" method="post" class="form-signup" autocomplete="off">
                                    <input width="25px" type="text" id="user-name" class="form-control" placeholder="First name" name="firstname">
                                    <input width="25px" type="text" id="user-name2" class="form-control" placeholder="Last name" name="lastname">
                                    <input type="email" id="user-email" class="form-control" placeholder="Email address" name="email">
                                    <input type="password" id="user-pass" class="form-control" placeholder="Password must be at least 6 characters" name="password">

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>
                                                Submit</button>

                                    </div>

                                </form>
                            </div>

                        </div>

                    </div>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="name-user">List</th>
                                <th class="name-user">Avatar</th>
                                <th class="name-user">First Name</th>
                                <th class="name-user">Last Name</th>
                                <th class="name-user">Email</th>
                                <th class="name-user">Role</th>
                                <th class="name-user">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% users.forEach((user)=>{ %>
                                <tr style="text-align: center;">
                                    <td></td>
                                    <td> <img width="30px" style="border-radius: 50px;" src="<%= user.imageUrl == null ? 'https://iupac.org/wp-content/uploads/2018/05/default-avatar.png' : user.imageUrl %>" class="img-user" /></td>
                                    <td>
                                        <%= user.firstname %>
                                    </td>
                                    <td>
                                        <%= user.lastname %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.role%>
                                    </td>
                                    <td>
                                        <a href="/admin/edit/<%= user.id%>" class="btn btn-sm btn-success">Edit</a>
                                        <a href="/admin/delete/<%= user._id%> " onclick="return confirm( 'Are you sure to delete this record ?'); " class="btn btn-sm btn-danger ">Delete</a>
                                        <a href="/admin/ban/<%= user._id%>" onclick="myFunction(this)" class="btn btn-sm btn-warning ">Ban</a>
                                        <a href="/admin/resetPassword/<%= user.id%>" class="btn btn-sm btn-primary">Reset
                                            Password</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>

                </div>

            </div>
            <!-- /. ROW  -->
            <hr />
